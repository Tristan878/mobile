<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile2.Pages.DetailPokemon"
             Title="Détails du Pokémon">
    
    
  <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="10">

            <Label HorizontalTextAlignment="Center" 
                   FontSize="Large">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="{Binding Nom}" 
                              TextColor="Black"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            
            <Image Source="{Binding Pictures}" 
                   WidthRequest="150" 
                   HeightRequest="150" />

            <StackLayout Orientation="Horizontal">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Pokémon Numéro :" FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="{Binding Id}" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Taille : " FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="{Binding Height}" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Poids : " FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="{Binding Weight}" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="HP : " FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="{Binding Hp}" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>

            <StackLayout Orientation="Vertical">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Talent : " FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="{Binding Capacity}" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>