<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile2.Pages.HomePage"
             Title="Menu Principal">
   
    <ContentPage.Content>

        <FlexLayout AlignItems="Center"
                    Direction="Column" 
                    JustifyContent="SpaceAround">

            <Image  HeightRequest="100"
                    Source="logo.png"/>

            <Label  FontSize="Large" 
                    Text="Bienvenue sur PokeAppli !"
                    TextColor="Black"/>

            <Label  FontSize="Body"
                    Text="Cette application sert à visualiser le pokédex"
                    TextColor="Black"/>

            <Label FontSize="Body"
                   Text="Mais surtout de créer vos propres Pokémon"
                   TextColor="Black"/>

            <Label FontSize="Body"
                   Text="Alors soyez créatif ! PIKA PIKA !"
                   TextColor="Black"/>

            <Image HeightRequest="100" 
                   Source="Pikachu.png"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>